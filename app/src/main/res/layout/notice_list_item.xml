<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="范老师"
        android:textColor="@color/primary_black"
        android:textSize="18sp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="网络工程大作业"
        android:textColor="@color/primary_black"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/tv_notice_body"
        android:layout_below="@+id/tv_sender"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_notice_body"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="网络工程大作业网络工程大作业网络工程大作业网络工程大作业网络工程大作业网络工程大作业"
        android:textColor="@color/primary_black"
        android:textSize="20sp"
        android:layout_below="@+id/tv_notice_title"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08-11"
        android:textColor="@color/primary_black"
        android:textSize="20sp"
        android:layout_below="@+id/tv_notice_body"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>